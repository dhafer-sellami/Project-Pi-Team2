{% extends 'baseB.html.twig' %}

{% block title %}Hello AdminMedicamentController!
{% endblock %}

{% block section %}
	<div class="container-fluid px-4">
		<h1 class="mt-4">Médicaments</h1>
		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item active">affichage</li>
		</ol>
		<div class="card mb-4">
			<div class="card-header">
				<i class="fas fa-table me-1"></i>
				Liste des médicaments
				<a href="{{ path('app_admin_medicament_new') }}" class="btn btn-primary">Ajouter</a>
			</div>

			<div class="card-body">
				<table id="datatablesSimple">
					<thead>
						<tr>
							<th>Name</th>
							<th>Duration</th>
							<th>Office</th>
							<th>Category</th>
							<th>Description</th>

						</tr>
					</thead>
					<tbody>
						{% for medicament in medicaments %}
							<tr>
								<td>{{ medicament.name }}</td>
								<td>{{ medicament.duration }}</td>
								<td>{{ medicament.category }}</td>
								<td>{{ medicament.description }}</td>
								<td>
									<a href="{{ path('app_admin_medicament_edit', {'id': medicament.id}) }}" class="btn btn-warning">edit</a>
									{{ include('admin_medicament/_delete_form.html.twig') }}
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

			</div>
		</div>


	{% endblock %}
